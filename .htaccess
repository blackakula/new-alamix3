Options +FollowSymLinks -Indexes

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  RewriteCond %{REQUEST_URI} !^/public
  RewriteRule ^(.*)$ public/$1 [L,QSA]

  RewriteCond %{ENV:REDIRECT_STATUS} ^$
  RewriteRule ^(.*)$ public/$1 [L,QSA]

  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteRule ^(.*)$ public/$1 [L,QSA]
</IfModule>
