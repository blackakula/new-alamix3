<?php if (!have_posts()): ?>
  .not-found
    -= _get_config('not_found')
<?php else: ?>
  - while (have_posts())
    - MyWPRegistry::set('squares', array(0,1,2))
    - _include('separator.php')
    - the_post()
    <div id="post-<?php the_ID() ?>" <?php post_class() ?>>
      %h2.entry-title
        <a href="<?php the_permalink() ?>"><?php the_title() ?></a>
      - _include('post_meta.php')
      .entry-content
        - the_content(_get_config('continue_reading'))
        .clear
      .entry-utility
        - $edit_post_link = _get_config('edit_post_link')
        - edit_post_link($edit_post_link[0], $edit_post_link[1], $edit_post_link[2])
        %span.comments-link
          - $comments = _get_config('comments')
          - $post_comments = _get_config('post_comments')
          - comments_popup_link($comments[0], $comments[1], $comments[2], '', $post_comments['closed'])
    </div>
  - if ($wp_query->max_num_pages > 1)
    - $pagination = _get_config('pagination')
    .navigation#nav-below
      .nav-previous
        - next_posts_link($pagination['previous'])
      .nav-next
        - previous_posts_link($pagination['next'])
      .clear
  - _include('entry_archives.php')
<?php endif; ?>
