<?php
  $template = MyWPRegistry::get('Template');
  $template->set('alamix-menu', MyWPRegistry::get('Controller')->get('alamix-menu'));
  $template->setMenu();
  $menu = $template->get('menu');
  $menu[] = array('&#9829;', get_routes()->build_path('heart'), 'name' => 'heart');
?>
.menu
  - foreach ($menu as $i => $item)
    <?php
      $odd = ($i % 2 == 0) ? 'up' : 'down';
      if (isset($item['name'])) {
        $i = '-' . $item['name'];
      }
      $class = 'item' . $i;
      $color = 'c' . $i;
      $bg_color = 'b' . $i;
    ?>
    .item.$odd.$class
      %a.$color{href="$item[1]"}
        %span.head.$bg_color
        %span.text= $item[0]
        %span.tail.$bg_color
  .clear