      $class = 'item' . $i;
      $color = 'c' . $i;
      $bg_color = 'b' . $i;
    ?>
    .item.$odd.$class
      %a.$color{href="$item[1]"}
        %span.head.$bg_color
        %span.text= $item[0]
        %span.tail.$bg_color
  .clear